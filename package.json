{
  "name": "fb-seeder-tool",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "tsc && vite build",
    "coverage": "vitest run --coverage",
    "dev": "vite",
    "format": "prettier --write 'src/**/*.{ts,js,tsx}'",
    "prepare": "husky install",
    "preview": "vite preview",
    "tauri": "tauri",
    "test": "run-p -l dev test:e2e",
    "test:unit": "vitest",
    "test:report": "npx playwright show-report",
    "test:e2e": "npx playwright test"
  },
  "dependencies": {
    "@hookform/devtools": "4.3.1",
    "@mantine/core": "5.10.5",
    "@mantine/hooks": "5.10.5",
    "@mantine/rte": "5.10.5",
    "@preact/signals-react": "1.3.8",
    "@tailwindcss/typography": "0.5.13",
    "@tauri-apps/api": "1.5.6",
    "daisyui": "3.9.4",
    "jotai": "2.8.3",
    "mitt": "3.0.1",
    "p-forever": "3.0.1",
    "pino": "8.21.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-error-boundary": "4.0.13",
    "react-hook-form": "7.51.5",
    "react-hot-toast": "2.4.1",
    "use-local-storage-state": "19.3.0"
  },
  "devDependencies": {
    "@playwright/test": "1.44.1",
    "@tauri-apps/cli": "1.5.14",
    "@testing-library/react": "14.3.1",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "@vitejs/plugin-react": "4.3.1",
    "autoprefixer": "10.4.19",
    "c8": "8.0.1",
    "eslint": "8.57.0",
    "eslint-config-productsway": "1.3.3",
    "happy-dom": "10.11.2",
    "husky": "8.0.3",
    "nano-staged": "0.8.0",
    "npm-run-all2": "5.0.2",
    "postcss": "8.4.38",
    "prettier": "3.3.1",
    "prettier-plugin-tailwindcss": "0.6.2",
    "rustywind": "0.22.0",
    "sort-package-json": "2.10.0",
    "tailwindcss": "3.4.4",
    "tsx": "4.15.1",
    "typescript": "5.4.5",
    "vite": "5.2.14",
    "vitest": "1.6.0"
  },
  "nano-staged": {
    "*.{js,tsx}": "eslint --cache --fix",
    "*.{js,json,ts,tsx,css,md}": "prettier --write",
    "*.{tsx}": "rustywind --write",
    "package.json": "sort-package-json package.json"
  }
}
