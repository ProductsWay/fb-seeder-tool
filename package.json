{
  "name": "fb-seeder-tool",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "tsc && vite build",
    "coverage": "vitest run --coverage",
    "dev": "vite",
    "format": "prettier --write 'src/**/*.{ts,js,tsx}'",
    "prepare": "husky install",
    "preview": "vite preview",
    "tauri": "tauri",
    "test": "run-p -l dev test:e2e",
    "test:unit": "vitest",
    "test:report": "npx playwright show-report",
    "test:e2e": "npx playwright test"
  },
  "dependencies": {
    "@hookform/devtools": "4.2.3",
    "@mantine/core": "5.7.2",
    "@mantine/hooks": "5.7.2",
    "@mantine/rte": "5.7.2",
    "@preact/signals-react": "1.2.1",
    "@tailwindcss/typography": "0.5.8",
    "@tauri-apps/api": "1.2.0",
    "daisyui": "2.39.1",
    "jotai": "1.9.2",
    "mitt": "3.0.0",
    "p-forever": "3.0.1",
    "pino": "8.7.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "3.1.4",
    "react-hook-form": "7.39.3",
    "react-hot-toast": "2.4.0",
    "use-local-storage-state": "18.1.1"
  },
  "devDependencies": {
    "@playwright/test": "1.27.1",
    "@tauri-apps/cli": "1.2.0",
    "@testing-library/react": "13.4.0",
    "@trivago/prettier-plugin-sort-imports": "3.4.0",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.8",
    "@typescript-eslint/eslint-plugin": "5.42.1",
    "@typescript-eslint/parser": "5.42.1",
    "@vitejs/plugin-react": "2.2.0",
    "autoprefixer": "10.4.13",
    "c8": "7.12.0",
    "eslint": "8.27.0",
    "eslint-config-productsway": "0.1.16",
    "happy-dom": "7.7.0",
    "husky": "8.0.2",
    "nano-staged": "0.8.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.19",
    "prettier": "2.7.1",
    "prettier-plugin-tailwindcss": "0.1.13",
    "sort-package-json": "2.1.0",
    "tailwindcss": "3.2.4",
    "tsx": "3.12.1",
    "typescript": "4.8.4",
    "vite": "3.2.3",
    "vitest": "0.25.1"
  },
  "nano-staged": {
    "*.{js,tsx}": "eslint --cache --fix",
    "*.{js,json,ts,tsx,css,md}": "prettier --write",
    "package.json": "sort-package-json package.json"
  }
}
