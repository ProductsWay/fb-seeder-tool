{
  "name": "fb-seeder-tool",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "tsc && vite build",
    "coverage": "vitest run --coverage",
    "dev": "vite",
    "format": "prettier --write 'src/**/*.{ts,js,tsx}'",
    "prepare": "husky install",
    "preview": "vite preview",
    "tauri": "tauri",
    "test": "run-p -l dev test:e2e",
    "test:unit": "vitest",
    "test:report": "npx playwright show-report",
    "test:e2e": "npx playwright test"
  },
  "dependencies": {
    "@hookform/devtools": "4.2.2",
    "@mantine/core": "5.2.4",
    "@mantine/hooks": "5.2.4",
    "@mantine/rte": "5.2.4",
    "@tailwindcss/typography": "0.5.4",
    "@tanstack/react-query": "4.2.3",
    "@tanstack/react-query-devtools": "4.2.3",
    "@tauri-apps/api": "1.0.2",
    "daisyui": "2.24.0",
    "jotai": "1.8.1",
    "mitt": "3.0.0",
    "pino": "8.4.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "3.1.4",
    "react-hook-form": "7.34.2",
    "use-local-storage-state": "18.1.1",
    "verbum": "0.3.5"
  },
  "devDependencies": {
    "@playwright/test": "1.25.1",
    "@tauri-apps/cli": "1.0.5",
    "@testing-library/react": "13.3.0",
    "@trivago/prettier-plugin-sort-imports": "3.3.0",
    "@types/react": "18.0.17",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "5.35.1",
    "@typescript-eslint/parser": "5.35.1",
    "@vitejs/plugin-react": "2.0.1",
    "autoprefixer": "10.4.8",
    "c8": "7.12.0",
    "eslint": "8.23.0",
    "eslint-config-productsway": "0.1.15",
    "happy-dom": "6.0.4",
    "husky": "8.0.1",
    "nano-staged": "0.8.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.16",
    "prettier": "2.7.1",
    "sort-package-json": "1.57.0",
    "tailwindcss": "3.1.8",
    "tsx": "3.8.2",
    "typescript": "4.8.2",
    "vite": "3.0.9",
    "vitest": "0.22.1"
  },
  "nano-staged": {
    "*.{js,tsx}": "eslint --cache --fix",
    "*.{js,json,ts,tsx,css,md}": "prettier --write",
    "package.json": "sort-package-json package.json"
  }
}
