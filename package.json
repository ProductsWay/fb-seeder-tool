{
  "name": "fb-seeder-tool",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "tsc && vite build",
    "coverage": "vitest run --coverage",
    "dev": "vite",
    "format": "prettier --write 'src/**/*.{ts,js,tsx}'",
    "prepare": "husky install",
    "preview": "vite preview",
    "tauri": "tauri",
    "test": "run-p -l dev test:e2e",
    "test:unit": "vitest",
    "test:report": "npx playwright show-report",
    "test:e2e": "npx playwright test"
  },
  "dependencies": {
    "@hookform/devtools": "4.3.1",
    "@mantine/core": "5.10.5",
    "@mantine/hooks": "5.10.5",
    "@mantine/rte": "5.10.5",
    "@preact/signals-react": "1.3.6",
    "@tailwindcss/typography": "0.5.10",
    "@tauri-apps/api": "1.5.0",
    "daisyui": "3.9.2",
    "jotai": "2.4.3",
    "mitt": "3.0.1",
    "p-forever": "3.0.1",
    "pino": "8.16.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "4.0.11",
    "react-hook-form": "7.47.0",
    "react-hot-toast": "2.4.1",
    "use-local-storage-state": "19.1.0"
  },
  "devDependencies": {
    "@playwright/test": "1.38.1",
    "@tauri-apps/cli": "1.5.2",
    "@testing-library/react": "14.0.0",
    "@trivago/prettier-plugin-sort-imports": "4.2.0",
    "@types/react": "18.2.28",
    "@types/react-dom": "18.2.13",
    "@typescript-eslint/eslint-plugin": "6.7.5",
    "@typescript-eslint/parser": "6.7.5",
    "@vitejs/plugin-react": "4.1.0",
    "autoprefixer": "10.4.16",
    "c8": "8.0.1",
    "eslint": "8.51.0",
    "eslint-config-productsway": "1.3.0",
    "happy-dom": "10.11.2",
    "husky": "8.0.3",
    "nano-staged": "0.8.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.31",
    "prettier": "3.0.3",
    "prettier-plugin-tailwindcss": "0.5.5",
    "rustywind": "0.19.0",
    "sort-package-json": "2.6.0",
    "tailwindcss": "3.3.3",
    "tsx": "3.13.0",
    "typescript": "5.2.2",
    "vite": "4.4.11",
    "vitest": "0.34.6"
  },
  "nano-staged": {
    "*.{js,tsx}": "eslint --cache --fix",
    "*.{js,json,ts,tsx,css,md}": "prettier --write",
    "*.{tsx}": "rustywind --write",
    "package.json": "sort-package-json package.json"
  }
}
